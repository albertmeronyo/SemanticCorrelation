<sglib>
  
        <!-- Global options configuration we only use one thread (default value)-->
  
        <opt  threads = "1"  />
  
        <!-- We define global variables -->
        <variables>
  
                <!-- The path to the working directory is defined as HOME variable -->
                <var           
                        key   = "HOME"
                        value = "/var/www/sml/demo"
                />
  
                <!-- The path to the Gene Ontology -->
                <var
                        key   = "GRAPH_GO"     
                        value = "{HOME}/go_tutorial/data/gene_ontology_ext.obo"
                />
  
                <!-- The path to the annotations -->
                <var
                    key   = "ANNOT_HUMAN"  
                    value = "{HOME}/go_tutorial/data/gene_association.goa_human"
                />
  
                <!-- URIs -->
                
                <!-- The Graph Knowledge base -->
                <var
                        key   = "URI_GRAPH"       
                        value = "http://biograph/"
                />
                <!-- GO terms will be recieve http://biograph/go/ uri prefix-->
                <var
                        key   = "URI_GO"       
                        value = "{URI_GRAPH}go/"
                />
                <!-- UniprotKB protein will be recieve http://biograph/uniprotkb/ uri prefix -->
                <var
                        key   = "URI_UNIPROTKB"       
                        value = "{URI_GRAPH}uniprot/"
                />
  
                <!-- URI of the GO term corresponding to the BP GO subontology i.e. http://biograph/go/0008150 -->
                <var key = "BIOLOGICAL_PROCESS" value = "{URI_GO}0008150"/>
  
        </variables>
        
        <!-- Namespace prefix definition for the parsers e.g. GO:0008150 will be loaded as http://biograph/go/0008150 -->
        <namespaces>
			<nm prefix="GO" ref="{URI_GO}" />
		</namespaces>

        <!-- Knowledge base configuratiion-->
        <graphs>
                <graph uri="{URI_GRAPH}"  >
						<!-- The data to load-->
                        <data>
							<!-- The GO -->
                            <file format="obo"
                                  path="{GRAPH_GO}" />
 
							<!-- The UniprotKB file -->
                            <file format="gaf_2"
								  prefix = "{URI_UNIPROTKB}"
                                  path="{ANNOT_HUMAN}" />
                        </data>
						
						<!-- The Action to perform after graph loading -->
						<actions>
							<!-- Reduce the graph considering GO:0008150 as root -->
                            <action type="REROOTING"
									root_uri="{BIOLOGICAL_PROCESS}" />
                        </actions >
                </graph>
        </graphs>
        

        <!-- Definition of the sm module/tool --> 
        <sml module="sm" graph="{URI_GRAPH}" >
  
				<!-- Specificity / Information content metrics --> 
                <ics>
                        <ic id   = "icCorpus"    
							flag = "IC_ANNOT_RESNIK_1995_NORMALIZED"  />
                </ics>
  
  
				<!-- Paiwise measure(s) configuration -->
                <measures type = "pairwise">
                        <measure   id   = "Resnik" 
								   flag = "SIM_PAIRWISE_DAG_NODE_RESNIK_1995"          
								   ic   = "icCorpus" />                                    
                </measures>
  
				<!-- Groupwise measure(s) configuration -->
                <measures type = "groupwise">
                        <measure id   = "MAX"  
								flag  = "SIM_GROUPWISE_MAX"       
								pairwise_measure = "Resnik" />                         
                </measures>
                
                
                 <!-- Queries definition a prefix is used to generate valid URI e.g. P16591 will be associated to http://biograph/uniprot/P16591 --> 
                 <queries
                        id      = "query"
                        type    = "oTOo"
                        file    = "{HOME}/go_tutorial/data/queries/queries.csv"
                        output  = "{HOME}/go_tutorial/data/results/queries_results.csv"
						uri_prefix = "{URI_UNIPROTKB}" 
 
                />
  
        </sml>

</sglib>
